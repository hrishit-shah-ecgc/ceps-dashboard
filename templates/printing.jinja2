{% extends 'base.jinja2' %}

{% block head %}


<style>
    .title-wrapper p{
        font-size: 16px;
    }

    .form-group {
        width: 100%;
        height: 100%;
        margin: auto;
        text-align-last: center;
    }

    .form-group label{
        font-size: 16px;
    }
    .form-group input{
        font-size: 16px;
        width: 25vw;
        text-align: center;
        margin: 0px auto;
        display: block;
    }
    #inp {
        text-align: center;
        margin: auto;
        }
    }
</style>
{% endblock %}

<body>
{% block content %}
    <div class="page-wrapper" >
        <div class="title-wrapper">
        <div class="bg-wrapper">
            <h1>Print List Generator</h1>
            <br>
            <p>Enter your email and password to login into CEPS</p>
            <form method=post enctype="multipart/form-data">
                <div class="form-group">
                    <label for="username">Username</label>
                    <br>
                    <input type="text" placeholder="Enter Email" name="username" required>

                    <label for="password">Password</label>
                    <br>
                    <input type="password" placeholder="Enter Password" name="password" required>
                    <br>
                    <a href="{{ url_for('print_func') }}"><button class="btn">Let's Go</button></a>
                </div>
                
            </form>
        </div>
        </div>
    </div>
{% endblock %}
</body>